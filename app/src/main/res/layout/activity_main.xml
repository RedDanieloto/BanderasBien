<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Bandera de México con línea amarilla en el centro del verde -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- Verde con línea amarilla en el centro -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#006847" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#FFFF00"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Blanco -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF" />

        <!-- Rojo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CE1126" />
    </LinearLayout>

    <!-- Bandera de Francia con línea amarilla en el centro del blanco -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- Azul -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#002395" />

        <!-- Blanco con línea amarilla en el centro -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#FFFF00"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Rojo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ED2939" />
    </LinearLayout>

    <!-- Bandera de Bélgica con línea amarilla en el centro del rojo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Negro -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000" />

        <!-- Amarillo -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFD700" />

        <!-- Rojo con línea amarilla en el centro -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF0000" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#FFFF00"
                android:layout_gravity="center"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
